@model List<BusinessPortal.Domain.Entities.Product.ProductCategoryInfo>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _Localizer
@using System.Globalization

@if (Model != null && Model.Any())
{
    <div class="col-md-12">
        <div class="container-fluid slider">
            <div class="container">
                <div class="section-title-wrap">
                    <div class="row align-items-center">
                        <div class="col-lg-12">
                            <h4 class="textcol">@_Localizer["Products"]</h4>
                        </div>
                    </div>
                </div>
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.Where(p => p.ProductCategory.ParentId == null))
                        {
                            <div class="swiper-slide">
                                <a href="#">
                                    @if (!string.IsNullOrEmpty(item.ProductCategory.ProductCategoryImage))
                                    {
                                        <img class="img-fluid" src="@BusinessPortal.Application.StaticTools.PathTools.ProductCategoryOriginimage@item.ProductCategory.ProductCategoryImage" alt="">
                                    }
                                    else
                                    {
                                        <img class="img-fluid" src="@BusinessPortal.Application.StaticTools.PathTools.DefaultProductCategoryimage" alt="">
                                    }

                                    <div class="services-content">
                                        <p>@item.Title</p>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="swiper-pagination "></div>
                </div>
            </div>
        </div>
    </div>
}