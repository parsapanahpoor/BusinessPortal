@model List<BusinessPortal.Domain.ViewModels.Site.OurOffers.ListOfOurSalesAdvertisement>
@using BusinessPortal.Application.StaticTools

<div class="swiper mySwiper">
    <div class="col-lg-12 col-md-12 text-center mt-2">
    </div>
    <div class="swiper-wrapper">

        @if (Model != null && Model.Any())
        {
            foreach (var ads in Model)
            {
                <div class="swiper-slide">
                    <div class="single-shop-card2">
                        <div class="shop-image2">
                            <a href="#"><img class="img-fluid" src="@PathTools.AdvertisementThumbimage@ads.ImageName" alt="image"></a>
                        </div>
                        <div class="shop-content justify-content-center text-center ">
                            <h5>
                                <a class="hfona" href="shop-details.html">@ads.AdvertisementTitle</a>
                            </h5>

                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div class="swiper-pagination "></div>
</div>