@model BusinessPortal.Domain.ViewModels.Account.RegisterUserViewModel

@{
    ViewData["Title"] = "ثبت نام";
}

@section Scripts
{
<partial name="_JqueryValidation" />
}

<div class="register-area">
    <div class="container">
        <div class="register-form">
        <div class="form-horizontal">
            <div class="row ">
                <form asp-action="Register" asp-controller="Account" method="post">

                    <h4 class="text-center ">ایجاد حساب کاربری</h4>


                    <div class="form-group">
                       
                        <div class="col-md-12">
                            <input asp-for="Email" class="form-control" placeholder="ایمیل" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <div class="form-group">
                       
                        <div class="col-md-12">
                            <input asp-for="Mobile" class="form-control" placeholder="تلفن همراه" />
                            <span class="text-danger" asp-validation-for="Mobile"></span>
                        </div>
                    </div>

                    <div class="form-group">
                       
                        <div class="col-md-12">
                            <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="form-group">
                      
                        <div class="col-md-12">
                            <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار کلمه ی عبور " />
                            <span class="text-danger" asp-validation-for="RePassword"></span>
                        </div>
                    </div>
                    <div class="remember-me-wrap">
                        <p>
                            <input type="checkbox" id="test1">
                            <label for="test1"> با <a href="terms-of-service.html">شرایط و ضوابط</a>موافق هستم</label>
                        </p>
                    </div>

                    <div class="row p-3 m-3 ">
                        <button type="submit" class="default-btn">ثبت نام</button>
                    </div>
                    <div class="account-text">
                        <p>حساب کاربری دارید؟ <a asp-action="Login" asp-controller="Account">ورود</a></p>
                    </div>

                </form>
            </div>
        </div>
        </div>
    </div>
</div>






