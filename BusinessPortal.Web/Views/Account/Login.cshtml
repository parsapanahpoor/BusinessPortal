@model BusinessPortal.Domain.ViewModels.Account.LoginUserViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _Localizer
@using System.Globalization

@{
    ViewData["Title"] = @_Localizer["Login to account"];
}

@section Scripts
{
<partial name="_JqueryValidation" />
}

<div class="login-area ">
    <div class="container">
        <div class="login-form">
            <div class="form-horizontal">
                <div class="row ">
                    <form asp-action="Login" asp-controller="Account" method="post">

                        <h4 class="text-center ">@_Localizer["Login to account"]</h4>


                        <div class="form-group">
                          
                            <div class="col-md-12">
                                <input asp-for="Email" class="form-control" placeholder="@_Localizer["Email"]" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>



                        <div class="form-group">
                           
                            <div class="col-md-12">
                                <input asp-for="Password" type="password" class="form-control" placeholder="@_Localizer["Password"]" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                        </div>


                        <div class="row align-items-center">
                            <div class="col-lg-6 col-md-6 col-sm-6 remember-me-wrap">
                                <p>
                                    <input type="checkbox" id="test1" asp-for="RememberMe">
                                    <label for="test1">@_Localizer["Remember me"]</label>
                                </p>
                               
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6 mt-2 lost-your-password-wrap">
                                <div class="form-group">
                                    <a asp-action="ForgotPassword" asp-controller="Account">@_Localizer["Forgot your password"]  </a>
                                </div>
                            </div>
                        </div>

                        <div class="row p-3 m-3 ">
                            <button type="submit" class="default-btn">@_Localizer["Login"]</button>
                        </div>
                        <div class="account-text">
                            <p>@_Localizer["HaveAccount"] <a asp-action="Register" asp-controller="Account">@_Localizer["Register"]</a></p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





