@model BusinessPortal.Domain.ViewModels.Account.ForgotPasswordViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _Localizer
@using System.Globalization
@{
    ViewData["Title"] = @_Localizer["Forgot Password"];
}

@section Scripts
{
<partial name="_JqueryValidation" />
}



<div class="login-area ">
    <div class="container">
        <div class="login-form">
            <div class="form-horizontal">
                <div class="row ">
                    <form asp-action="Login" asp-controller="Account" method="post">

                        <h4 class="text-center ">@_Localizer["Forgot Password"]</h4>


                        <div class="form-group">
                          
                            <div class="col-md-12">
                                <input asp-for="Email" class="form-control" placeholder="@_Localizer["Email"]" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>



                       

                       

                        <div class="row p-3 m-3 ">
                            <button type="submit" class="default-btn">@_Localizer["Send"]</button>
                        </div>
                      

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

