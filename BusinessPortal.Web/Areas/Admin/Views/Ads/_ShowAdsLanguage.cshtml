@model BusinessPortal.Domain.Entities.Ads.AdsInfo

<div class="row">
    <div class="col-md-12">

        <div class="form-group col-md-12 col-sm-12">
            <label asp-for="AdsName">عنوان تبلیغات</label>
            <input type="text" class="form-control" asp-for="AdsName" disabled>
        </div>

        <div class="form-group col-md-12 col-sm-12">
            <label asp-for="ShortDescription">توضیح کوتاه تبلیغات</label>
            <input type="text" class="form-control" asp-for="ShortDescription" disabled>
        </div>

        <div class="form-group col-md-12 col-sm-12">
            <label asp-for="LongDescription">توضیح کامل تبلیغات</label>
            <textarea type="text" class="form-control">@Model.LongDescription</textarea>
        </div>

    </div>
</div>