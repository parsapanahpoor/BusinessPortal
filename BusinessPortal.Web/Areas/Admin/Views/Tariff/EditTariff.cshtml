@using BusinessPortal.Domain.ViewModels.Common
@using BusinessPortal.Application.StaticTools
@model BusinessPortal.Domain.Entities.Tariff.Tariff

@{
    ViewData["Title"] = "ویرایش تعرفه ";
}

@section Scripts
{
<partial name="_JqueryValidation" />
}

@section Breadcrumbs
{
<li>
    <a href="javascript:void(0)"> @ViewData["Title"] </a>
</li>
}

<form method="post" asp-action="EditTariff" asp-controller="Tariff" asp-area="Admin">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-blue">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="TariffName">
                                    نام تعرفه
                                </label>
                                <input type="text" class="form-control" asp-for="TariffName">
                                <span class="text-danger" asp-validation-for="TariffName"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="TariffPrice">
                                    قیمت تعرفه
                                </label>
                                <input type="text" NumericInput="1" class="form-control" asp-for="TariffPrice">
                                <span class="text-danger" asp-validation-for="TariffPrice"></span>
                            </div>

                            <div class="clearfix"></div>

                            <div class="form-group col-md-4 col-sm-12">
                                <label asp-for="CountOfSeenAdvertisement">تعداد آگهی قابل مشاهدهدر طول روز </label>
                                <input type="number" class="form-control" asp-for="CountOfSeenAdvertisement">
                                <span class="text-danger" asp-validation-for="CountOfSeenAdvertisement"></span>
                            </div>

                            <div class="form-group col-md-4 col-sm-12">
                                <label asp-for="CountOfAddAdvertisement">تعداد آگهی قابل درج در طول روز</label>
                                <input type="number" class="form-control" asp-for="CountOfAddAdvertisement">
                                <span class="text-danger" asp-validation-for="CountOfAddAdvertisement"></span>
                            </div>

                            <div class="form-group col-md-4 col-sm-12">
                                <label asp-for="tariffDuration">بازه ی تعرفه</label>
                                <input type="number" class="form-control" asp-for="tariffDuration">
                                <span class="text-danger" asp-validation-for="tariffDuration"></span>
                            </div>

                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-blue">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ویرایش
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
