@model BusinessPortal.Domain.Entities.Advertisement.AdvertisementInfo

<div class="row">
    <div class="col-md-12">

            <div class="form-group col-md-12 col-sm-12">
                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title" disabled>
            </div>
          
            <div class="form-group col-md-12 col-sm-12">
