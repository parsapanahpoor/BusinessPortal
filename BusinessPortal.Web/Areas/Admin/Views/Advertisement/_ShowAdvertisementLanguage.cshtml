                <input type="text" class="form-control" asp-for="AdsUrl" disabled>
            </div>

            <div class="form-group col-md-12 col-sm-12">
                <label asp-for="Description"></label>
                <textarea type="text" class="form-control"  >@Model.Description</textarea>
            </div>

    </div>
</div>