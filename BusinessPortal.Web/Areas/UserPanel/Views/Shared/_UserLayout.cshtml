<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_UserMetaTags" />
    <title>پنل کاربری   | @ViewData["Title"] </title>
    <partial name="_UserHeaderReferences" />
    @RenderSection("styles", false)
</head>
<body>

    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        <div class="nav-header">
            <a href="/" class="brand-logo">


                <img class="brand-title" src="~/Site/images/logo-2.png" alt="">

                @*<img class="logo-abbr" src="/UserContent/images/logo-white.png" alt="">
                    <img class="logo-compact" src="/UserContent/images/logo-text-white.png" alt="">
                    <img class="brand-title" src="/UserContent/images/logo-text-white.png" alt="">*@
            </a>

            <div class="nav-control">
                <div class="hamburger">
                    <span class="line"></span><span class="line"></span><span class="line"></span>
                </div>
            </div>
        </div>

        @await Component.InvokeAsync("UserChatbox")

        @await Component.InvokeAsync("UserHeader")

        @await Component.InvokeAsync("UserSideBar")

        <div class="content-body">
            <!-- row -->
            @RenderBody()
        </div>

    </div>

    <partial name="_SharedModal"/>
    <partial name="_UserFooterReferences" />
    @RenderSection("scripts", false)
    <partial name="_SiteMessages" />

</body>

</html>

